{
    "manifestVersion": 1,
    "id": "apim-deploy",
    "version": "0.1.1",
    "name": "API Management Deployment",
    "description": "Deployment tools for Azure API Management.",
    "publisher": "plukasiak",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
            }
        ],
    "icons": {
        "default": "images/apim.png"
     },
    "scopes": [
        "vso.build_execute"
    ],
    "categories": [
        "Build and release"
    ],
    "tags": [
        "Utility",
        "Deploy API",
        "API Management",
        "Deploy Task"
    ],
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/p-lukasiak/vsts-apim.git"
    },
    "branding": {
        "color": "#0088DC",
        "theme": "light"
    },
    "contributions": [
        {
            "id": "task-deployapi",
            "type": "ms.vss-distributed-task.task",
            "description": "Deploy API",
            "targets": [
                "ms.vss-distributed-task.task"
            ],
            "properties": {
                "name": "deploy-api"
            }
        }
    ],
    "files": [
        {
            "path": "deploy-api"
        },
        {
            "path": "images/apim.png", "addressable": true
        }
    ]
}